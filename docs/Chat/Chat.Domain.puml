@startuml Chat Domain
!include meta/Domain.Analysis.metamodel.iuml

$aggregate(Chat) {
    $aggregate_root(Chat) {
        + id: Guid
        + creationTime: DateTime
        + participants: List[Guid]
        + sendMessage(Message)
        + deleteMessage(Guid)
        + editMessage(Guid, newText: String)
        + meanDailyMessagges(): Real
        + meanWeeklyMessagges(): Real
        + totalChatMessagges(): Int
    }

    $entity(Message) {
        + id: Guid
        + text: String
        + sendTime: DateTime
        + lastEditTime: Option[DateTime]
        + sender: Guid
    }

    Message "0..*" ---* "1" Chat

}

$aggregate(User) {
    $entity(User) {
        + id: Guid
    }
}

User "1" <.left. "0..*" Message : sender
User "1..2" <.. "0..*" Chat: participant
@enduml